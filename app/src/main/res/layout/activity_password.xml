<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.anima.xd.s.myapp2.password.PasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_56dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:paddingLeft="@dimen/_16dp"
        android:paddingRight="@dimen/_16dp">
        <TextView
            android:id="@+id/TV_numOfPassword_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="@dimen/typo_password"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/_8dp"/>
        <TextView
            android:id="@+id/TV_numOfPassword_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="@dimen/typo_password"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/_8dp"/>
        <TextView
            android:id="@+id/TV_numOfPassword_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="@dimen/typo_password"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/_8dp"/>
        <TextView
            android:id="@+id/TV_numOfPassword_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="@dimen/typo_password"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/_8dp"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:columnCount="3">
        <Button
            android:id="@+id/Btn_num_1"
            android:text="1"
            android:textSize="@dimen/size_24dp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            />
    </GridLayout>

</LinearLayout>
